<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".D_CoreFunctionality">

    <TextView
        android:id="@+id/core_functionality_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4. State: Core Functionality"
        app:layout_constraintBottom_toTopOf="@id/button_core_func"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/core_functionality_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintBottom_toTopOf="@id/button_core_func"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/core_functionality_info" />

    <Button
        android:id="@+id/button_core_func"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Core Func"
        app:layout_constraintBottom_toTopOf="@id/core_functionality_info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>