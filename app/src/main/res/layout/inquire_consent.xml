<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".B_InquireConsent">

    <TextView
        android:id="@+id/textview_inquire_consent_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3. State: Consent"
        app:layout_constraintBottom_toTopOf="@id/button_init"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/button_consent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Give Consent"
        app:layout_constraintBottom_toTopOf="@id/button_init"
        app:layout_constraintEnd_toStartOf="@id/button_refuse"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_inquire_consent_post"
        />

    <Button
        android:id="@+id/button_refuse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Refuse Consent"
        app:layout_constraintBottom_toTopOf="@id/button_init"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/button_consent"
        app:layout_constraintTop_toBottomOf="@id/textview_inquire_consent_post"
        />

    <Button
        android:id="@+id/button_init"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next: Basic Func"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_inquire_consent_post"
        />

</androidx.constraintlayout.widget.ConstraintLayout>